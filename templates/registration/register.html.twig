

        <link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{asset('assets/css/styles.css')}}">

 <title>{% block title %}registration{% endblock %} </title>

{% block body %}
    <section class="container regicontainer">
        <div class="row">
            <div class="col">
                <h1 class='mt-3' style='color: #fff;'>Inscription</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class=" mb-3 mt-3 pt-3">
                        <legend style='color: #fff;'>Mon identité</legend>
                        {{ form_row(registrationForm.lastname) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend style='color: #fff;'>Mes coordonnées</legend>
                        {{ form_row(registrationForm.address) }}
                        {{ form_row(registrationForm.zipcode) }}
                        {{ form_row(registrationForm.city) }}
                    </fieldset>

                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.RGPDConsent) }}

                    <button type="submit" class="btn regiinsc btn-warning btn-lg my-3">M'inscrire</button>
                    <a href="{{path('app_login')}}" class="btn regiinsc btn-danger btn-lg my-3"> Me connecter</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
    
{% endblock %}
