{% extends 'base.html.twig' %}


{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                         
            </div>
            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2 class="titresection" style="color: #fff; font-weight: bold; margin-top: 30px;">{{ category.name }}</h2>
                    </div>
                {% else %}
                    <div class="col-md-4 text-center cardall">
                        <div class="card h-100 ">
                            <div class="card-body">
                                <h3 class="card-title">{{ category.name }}</h3>
                                <a href="{{path('categories_list', {slug: category.slug})}}" class="btn btncard">Voir les produits</a>
                            </div>
                        </div>
                    </div>    
                {% endif %}
            {% endfor %}
        </section>
    </main>
{% endblock %}